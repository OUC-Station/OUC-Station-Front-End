/* pages/center/center.wxss */
page{
  height: 100%;
  background-color: #f7f7f7;
}
.login-box{
  background-size: 100% 100%;
  height:40%;
  width: 100%;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  /* 高斯模糊处理 */
  /*filter: blur(5rpx);*/
}
.userImage1{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 10%;
  text-align: center;
}
.userImage1 image{
  width:160rpx;
  height:160rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 4rpx solid rgb(255,251,240);
}
.nickname{
  color: rgb(255,251,240);
  font-size: 36rpx;
  margin-top: 20rpx;
}
.logout{
  margin-top: 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: 3rpx solid rgb(255,251,240);
  color: rgb(255,251,240);
}
.btn{
  margin-top: 10rpx;
}
.logout{
  background: transparent !important;
  height: 50rpx !important;
  border-radius: 30rpx !important;
}
.userImage2{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 14%;
  text-align: center;
}
.userImage2 image{
  width:160rpx;
  height:160rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 4rpx solid rgb(255,251,240);
}


.lists{
  background: #ffffff;
  align-items: center;
  width: 45%;
  height:45%;
  display: inline-block;
  margin: 10rpx;
  border-radius: 10rpx;
}
.list-hover{  
  box-shadow: 0 28rpx 56rpx rgba(0,0,0,0.25), 0 20rpx 20rpx rgba(0,0,0,0.22);
}
.img{
  display: flex;
  justify-content: center;
  margin: 30rpx;
}
.font{
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #5f5f5f;
  margin: 30rpx;
}
