page{
  height: 100%;
  background-color: #f7f7f7;
}
.login-box{
  background-size: 100% 100%;
  /*height:40%;*/
  width: 100%;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  /* 高斯模糊处理 */
  /*filter: blur(5rpx);*/
}
.userImage1{
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  /*top: 10%;*/
  text-align: center;
  display: flex;
}
.userImage1p{
  align-self: center;
}
.userImage1 image{
  width: 70px;
  height: 70px;
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid rgb(255,251,240);
}
.nickname{
  display: block;
  color: rgb(255,251,240);
  font-size: 16px;
  margin-top: 10px;
}
.logout{
  margin-top: 10px;
  border-radius: 10px;
  font-size: 13px;
  border: 2px solid rgb(255,251,240);
  color: rgb(255,251,240);
}
.btn{
  margin-top: 10rpx;
}
.logout{
  background: transparent !important;
  height: 25px !important;
  border-radius: 15px !important;
}
