/* pages/activitydetail/activitydetail.wxss */
page{
  height: 100%;
  background-color: #ffffff;
}
.top{
  background: #000000;
}
.dimback{
  background: #000000;
  display: flex;
  height: 400rpx;
  position: relative;
  z-index: 1; 
}
.dim{
  width: 100%;
  height:400rpx;
  opacity:0.6; 
  filter: alpha(opacity=60);
}
.backarrow{
  position: absolute;
  z-index: 2;
  top: 10px;
  left: 10px;
  width: 55rpx;
  height: 55rpx;
}
.center{
  margin: 40rpx;
  border-bottom: 1px solid #efefef;
  padding-bottom: 40rpx;
}
.title{
  margin-top: 20rpx;
  color: #333333;
  font-size: 42rpx;
  font-weight: bold;
  word-wrap: break-word;
  word-break: break-all;
}
.time1{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #999999;
}
.time2{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999999;
}
.content{
  margin: 40rpx;
  word-wrap: break-word;
  word-break: break-all;
  color: #666666;
}