<form bindsubmit="formSubmit" >

<view class="top">
   <textarea class="input" type='text' maxlength='300' name="content" value="{{content}}"placeholder="在这里写下你的疑问吧~" placeholder-style="color:#9a9a9a;font-size:34rpx;" bindinput='limitWord' auto-focus="true" show-confirm-bar="{{false}}"></textarea>
     <text style="float: right; color:#9a9a9a;font-size:30rpx;">{{currentWord}}/{{maxWord}}(最多可输入300字)</text>
</view>

<view class='btn-area'>
    <button class='loginBtn' hover-class="loginBtn-hover" formType="submit" disabled="{{disabled}}">发送</button>
</view>

</form>
