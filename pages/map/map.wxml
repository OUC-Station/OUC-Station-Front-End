<van-tabs active="{{ active }}"
line-width="375rpx"
color="#a885d5"
title-inactive-color="#616267"
title-active-color="#2f3032"
tab-active-class="tab-active-class"
bind:change="onChange">
  <van-tab title="南线">
    <view class="page-body">
  <view class="page-section page-section-gap">
    <map
      scale="{{ 18 }}"
      id="myMap"
      style="width: 100%; height: 300px"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      bindtap="bindmaptap" polyline="{{polyline}}"
      markers="{{markers}}"
      bindmarkertap="bindmarkertap"
    ></map>
  </view>
  <view class="page-section page-section-gap">
    <button class="page-body-button" bindtap="startRecord">开始录制</button>
    <button class="page-body-button" bindtap="printPath">打印路径</button>
    <button class="page-body-button" bindtap="pauseRecord">暂停录制</button>
    <button class="page-body-button" bindtap="stopRecord">停止录制</button>
    <button class="page-body-button" bindtap="goback">倒退一步</button>
  </view>
</view>
  </van-tab>





