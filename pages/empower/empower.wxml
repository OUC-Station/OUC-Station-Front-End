<!--pages/empower/empower.wxml-->
<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='https://i.loli.net/2021/05/12/fNUYZrdO2X9eJqx.png' style="border-radius: 50%;"></image>
        </view>

        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
        <button class="btn" type = 'primary' bindtap='getUserProfile'>
            授权登录
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>


