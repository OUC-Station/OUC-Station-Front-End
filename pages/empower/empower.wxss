/* pages/empower/empower.wxss */
page{
  height: 100%;
}
.login-box{
  padding: 0rpx;
  position: fixed;
  align-items: center;
  justify-content: center;
  display: flex;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  background-image: url(https://i.loli.net/2021/06/05/nzLSyAUcxkR81iZ.png);
}
.btn{
  background:hsl(199, 50%, 85%);
  height: 100rpx;
  width: 300rpx;
  border-radius:20%;
  border: 2rpx solid #3276a5;
  box-shadow:/*底部灰色阴影*/
    4rpx 8rpx 4rpx 10rpx rgba(0,0,0,0.2),
    /*下面深蓝色立体阴影*/
    4rpx 8rpx 2rpx 2rpx hsl(208, 50%, 55%),
    /*内部暗色阴影*/
    0 -30rpx 4rpx 4rpx rgba(0,0,0,0.10) inset;
  color: #3276a5;
  text-shadow: rgba(255,255,255,.5) 0 2rpx 0;
  font: 48rpx/1em 'Droid Sans', sans-serif;
  font-weight: bold;
  margin: 30rpx;
}
.loginBtn-hover{
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 20rpx #bbbec4 inset;
}